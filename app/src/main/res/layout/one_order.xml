<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#602112">

    <ImageView
        android:id="@+id/productPicture"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginLeft="30px"
        android:layout_marginBottom="30px"
        android:layout_marginTop="30px"
        android:layout_marginRight="50px"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/par1"
        android:layout_toRightOf="@id/productPicture">

    <TextView
        android:id="@+id/textProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginBottom="10px"

        android:fontFamily="@font/island_moments"
        android:text="Proizvod1"
        android:textColor="@color/white"
        android:textSize="80px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/par2"
        android:layout_marginLeft="30px">

    <ImageView
        android:id="@+id/plusIcon"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginRight="30px"
        android:scaleType="centerCrop"
        android:onClick="plus"
        android:src="@drawable/plus" />

    <EditText
        android:id="@+id/count"
        android:layout_width="90dp"
        android:layout_height="70px"
        android:background="@color/white"
        android:inputType="text"
        android:gravity="center"
        android:textSize="60px"
        android:enabled="false"
        android:textColor="@color/black"
        android:layout_marginRight="30px"/>

    <ImageView
        android:id="@+id/minusIcon"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_below="@id/textProduct"
        android:layout_marginRight="30px"
        android:scaleType="centerCrop"
        android:onClick="minus"
        android:src="@drawable/minus" />

    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginBottom="30px"
        android:scaleType="centerCrop"
        android:layout_marginRight="30px"
        android:onClick="erase"
        android:src="@drawable/delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/textCena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:fontFamily="@font/island_moments"
        android:text="Proizvod1"
        android:textColor="@color/white"
        android:textSize="80px" />
    </LinearLayout>

</RelativeLayout>
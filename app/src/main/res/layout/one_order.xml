<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#602112">

    <ImageView
        android:id="@+id/productPicture"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="30px"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:id="@+id/par1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/productPicture"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginBottom="10px"

            android:fontFamily="@font/island_moments"
            android:text="Proizvod1"
            android:textColor="@color/white"
            android:textSize="80px" />

        <LinearLayout
            android:id="@+id/par2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/plusIcon"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginRight="30px"
                android:onClick="plus"
                android:scaleType="centerCrop"
                android:src="@drawable/plus" />

            <EditText
                android:id="@+id/count"
                android:layout_width="90dp"
                android:layout_height="70px"
                android:layout_marginRight="30px"
                android:background="@color/white"
                android:enabled="false"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="60px" />

            <ImageView
                android:id="@+id/minusIcon"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_below="@id/textProduct"
                android:layout_marginRight="30px"
                android:onClick="minus"
                android:scaleType="centerCrop"
                android:src="@drawable/minus" />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginRight="30px"
                android:layout_marginBottom="30px"
                android:onClick="erase"
                android:scaleType="centerCrop"
                android:src="@drawable/delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/textCena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/island_moments"
            android:text="Proizvod1"
            android:textColor="@color/white"
            android:textSize="80px" />
    </LinearLayout>

</RelativeLayout>
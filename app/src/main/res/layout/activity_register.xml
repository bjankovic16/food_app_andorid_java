<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextViews
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240px"
        android:fontFamily="@font/island_moments"
        android:text="Registracija korisnika"
        android:textColor="@color/white"
        android:textSize="140px" />

    <TextView
        android:id="@+id/labelIme"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_alignParentStart="true"
        android:layout_marginTop="600px"
        android:fontFamily="@font/island_moments"
        android:paddingLeft="40px"
        android:text="Ime: "
        android:textColor="@color/white"
        android:textSize="100px" />

    <EditText
        android:id="@+id/ime"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="600px"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@id/labelIme"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/island_moments"
        android:inputType="text"
        android:paddingLeft="30px"
        android:paddingBottom="0px"
        android:textColor="@color/white"
        android:textSize="100px" />

    <TextView
        android:id="@+id/labelPrezime"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@id/labelIme"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/island_moments"
        android:paddingLeft="40px"
        android:text="Prezime: "
        android:textColor="@color/white"
        android:textSize="100px" />

    <EditText
        android:id="@+id/prezime"
        android:layout_width="0dp"
        android:layout_height="130px"
        android:layout_below="@id/ime"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@id/labelPrezime"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/island_moments"
        android:inputType="text"
        android:paddingLeft="30px"
        android:paddingBottom="0px"
        android:textColor="@color/white"
        android:textSize="100px" />

    <TextView
        android:id="@+id/labelTelefon"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@id/labelPrezime"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/island_moments"
        android:paddingLeft="40px"
        android:text="Telefon: "
        android:textColor="@color/white"
        android:textSize="100px" />

    <EditText
        android:id="@+id/telefon"
        android:layout_width="0dp"
        android:layout_height="130px"
        android:layout_below="@id/prezime"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@id/labelTelefon"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/island_moments"
        android:inputType="text"
        android:paddingLeft="30px"
        android:paddingBottom="0px"
        android:textColor="@color/white"
        android:textSize="100px" />

    <TextView
        android:id="@+id/labelAdresa"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@id/labelTelefon"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/island_moments"
        android:paddingLeft="40px"
        android:text="Adresa: "
        android:textColor="@color/white"
        android:textSize="100px" />

    <EditText
        android:id="@+id/adresa"
        android:layout_width="0dp"
        android:layout_height="130px"
        android:layout_below="@id/labelTelefon"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@id/labelAdresa"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/island_moments"
        android:inputType="text"
        android:paddingLeft="30px"
        android:paddingBottom="0px"
        android:textColor="@color/white"
        android:textSize="100px" />


    <TextView
        android:id="@+id/labelKorisnik"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@id/labelAdresa"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60px"
        android:fontFamily="@font/island_moments"
        android:paddingLeft="40px"
        android:text="Korisničko ime: "
        android:textColor="@color/white"
        android:textSize="100px" />

    <EditText
        android:id="@+id/korisnickoIme"
        android:layout_width="0dp"
        android:layout_height="130px"
        android:layout_below="@id/labelAdresa"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60px"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@id/labelKorisnik"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/island_moments"
        android:inputType="text"
        android:paddingLeft="30px"
        android:paddingBottom="0px"
        android:textColor="@color/white"
        android:textSize="100px" />

    <TextView
        android:id="@+id/labelLozinka"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@id/labelKorisnik"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/island_moments"
        android:paddingLeft="40px"
        android:text="Lozinka: "
        android:textColor="@color/white"
        android:textSize="100px" />

    <EditText
        android:id="@+id/lozinka"
        android:layout_width="0dp"
        android:layout_height="130px"
        android:layout_below="@id/labelKorisnik"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@id/labelLozinka"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/island_moments"
        android:inputType="text"
        android:paddingLeft="30px"
        android:paddingBottom="0px"
        android:textColor="@color/white"
        android:textSize="100px" />


    <Button
        android:id="@+id/potvrda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lozinka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:onClick="registerUser"
        android:text="Potvrda unosa" />
</RelativeLayout>